<!DOCTYPE scripts SYSTEM "scriptella.dtd">
<scripts>
    <connection driver="org.hsqldb.jdbcDriver" url="jdbc:hsqldb:mem:dialectstest" user="sa" password=""/>
    <script>
        <!--must execute-->
        CREATE TABLE Test (
        ID INT,
        VALUE VARCHAR(255)
        );
    </script>
    <script>
        <!--must execute-->
        insert into test(id, value) values (1,'222');
    </script>
    <script>
        <dialect database=".*oracle.*"><!--Skipped-->
            insert into test(id, value) values (2,'333');
        </dialect>
    </script>
    <script>
        <dialect database="hsql.*"><!--must execute-->
            insert into test(id, value) values (3,'333');
        </dialect>
        <dialect database=""><!--executes-->
            insert into test(id, value) values (4,'333');
        </dialect>
    </script>
    <script>
        <dialect><!--must execute-->
            insert into test(id, value) values (5,'333');
        </dialect>
    </script>
    <script>
        <dialect database="HSQL.*" version="1\.8\..*"><!--must execute-->
            insert into test(id, value) values (6,'333');
        </dialect>
        <dialect database="hsql.*" version="1.8.*"><!--executes-->
            insert into test(id, value) values (7,'333');
        </dialect>
        <dialect database="hsql.*" version="1\.9.*"><!--skipped-->
            insert into test(id, value) values (8,'333');
        </dialect>
        insert into test(id, value) values (9,'333');

    </script>


</scripts>