<project name="LDAP/DB Migration" default="help">
    <taskdef resource="antscriptella.properties" classpath="../lib/scriptella.jar;jdbcldap.jar;../lib/hsqldb.jar"/>
    <target name="help">
        <echo message="Type ant db2ldap to migrate data from in-memory database to ldap"/>
        <echo message="Type ant ldap2db to migrate data from ldap to outdb"/>
        <echo message="OpenLDAP should be running on localhost:389. See readme.txt for more details"/>
    </target>
    <target name="db2ldap">
        <execute file="db2ldap.xml"/>
    </target>
    <target name="ldap2db">
        <execute file="ldap2db.xml"/>
    </target>

</project>
