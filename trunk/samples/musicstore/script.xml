<!DOCTYPE scripts SYSTEM "scriptella.dtd">
<scripts>
    <properties>
        <!--Uncomment if using outside ant
        <include href="build.properties"/>
        -->
        #Declare properties with file paths.
        file1=song1.mp3
        #Any URL may be used.
        file2=file:///$basedir/song2.mp3
    </properties>
    <connection driver="org.hsqldb.jdbcDriver" url="jdbc:hsqldb:file:tracks" user="sa" password=""/>

    <script>
        DROP TABLE Track IF EXISTS;
        CREATE TABLE Track (
          ID INT,
          ALBUM_ID INT,
          NAME VARCHAR(100),
          DATA LONGVARBINARY
        );
        <!-- Inserts file with path relative to executed script location -->
        insert into Track(id, album_id, name, data) values 
               (1, 1, 'Song1.mp3', ${this.file(file1)});
        <!-- Inserts file from URL, 
             other protocols like ftp, http or https are supported too -->
        insert into Track(id, album_id, name, data) values 
               (2, 2, 'Song2.mp3', ${this.file(file2)});
    </script>
    <script><!-- Correctly shutdown the DB -->
        <dialect database=".*hsql.*">
            COMMIT;
            SHUTDOWN;
        </dialect>
    </script>

</scripts>